@model BecomeDealerFormModel


@{
    ViewBag.Title = "Become a Dealer";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-magin text-center">@ViewBag.Title</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Top Auto, BestCars, etc...">
                <span asp-validation-for="Name" class="small text-danger">
                </span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+359-888-888-777">
                <span asp-validation-for="PhoneNumber" class="small text-danger">
                </span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>