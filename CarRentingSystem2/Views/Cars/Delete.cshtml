@model Car

@{
    ViewBag.Title = "Delete";
}

<div>
    <h2>
        Аre you sure you want to delete the car?
    </h2>
    <hr />
    <dl class="row">
        <h5 class="col-sm-2">
            Current Car:
        </h5>
        <h7 class="col-sm-2">
            @Html.DisplayFor(model => model.Brand)
            @Html.DisplayFor(model => model.Model)
            @Html.DisplayFor(model => model.Year)
        </h7>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="All" type="submit" value="Back" class="btn btn-primary">Back</a>
    </form>
</div>


