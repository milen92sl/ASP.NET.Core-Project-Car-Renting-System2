@model IEnumerable<CarServiceModel>

@{
    ViewBag.Title = "All Cars";
}

<h1>All Cars</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Brand</th>
            <th scope="col">Model</th>
            <th scope="col">Year</th>
            <th scope="col">Category</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var car in Model)
        {
        <tr>
            <td scope="col">@car.Id</td>
            <td scope="col">@car.Brand</td>
            <td scope="col">@car.Model</td>
            <td scope="col">@car.Year</td>
            <td scope="col">@car.CategoryName</td>
            <td scope="col">
                <a asp-area="" asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning ml-3">Edit</a>
                <a asp-area="" asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger ml-3">Delete</a>
                <a asp-area="" asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" asp-route-information="@car.GetInformation()" class="btn btn-primary ml-3">Click to view</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}